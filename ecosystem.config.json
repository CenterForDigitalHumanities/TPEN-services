{
  "$schema": "https://json.schemastore.org/pm2-ecosystem.json",
  "apps": [
    {
      "name": "tpen3_services",
      "script": "./bin/tpen3_services.js",
      "instances": "max",
      "exec_mode": "cluster",
      "node_args": "--env-file=config.env --env-file=.env",
      "env_development": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "listen_timeout": 10000,
      "kill_timeout": 5000,
      "wait_ready": false,
      "max_memory_restart": "500M",
      "error_file": "./logs/pm2-error.log",
      "out_file": "./logs/pm2-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}
